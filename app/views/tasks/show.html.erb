<div class="container-t">
  <h1><%= @task.title %></h1>
  <button>
    <%= link_to 'Edit this task', edit_task_path(@task) %>
  </button>

  <p><%= @task.details %></p>

  <% if @task.completed %>
    <p>☑ This task is completed</p>
  <% else %>
    <p>☐ This task is not completed yet</p>
  <% end %>
  
  <%= link_to 'Back to list', tasks_path %>
</div>
